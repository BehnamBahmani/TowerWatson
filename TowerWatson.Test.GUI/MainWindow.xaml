<Window x:Class="TowerWatson.Test.GUI.Shell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525"
        DataContext="{Binding Source={StaticResource Locator},Path=Main}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Margin="2"
               Content="File Name:" />
        <TextBox Margin="2"
                 Grid.Row="0"
                 Grid.Column="1"
                 Text="{Binding ClaimFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button Margin="2"
                Grid.Row="0"
                Grid.Column="2"
                Command="{Binding ImportCommand}"
                Content="Import" />
    </Grid>
</Window>